<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd" >
<!-- guest.xml -->
<sqlMap namespace="guest">
   <typeAlias alias="guest" type="com.encore.guest.vo.Guest"/>

   <insert id="insert" parameterClass="guest">
      insert into guest (no,writer,email,tel,pass,contents,wdate)
                  values (guest_seq.nextval,#writer#,#email#,#tel#,
                          #pass#,#contents#,sysdate)
   </insert>
   
   <select id="selectAll" resultClass="guest">
      select no,writer,tel,wdate,contents
      from guest
      order by no desc
   </select>
   <select id="select" parameterClass="int"
           resultClass="guest">
      select writer,email,tel,pass,contents
      from guest
      where no=#no#
   </select>
   
   <update id="update" parameterClass="guest">
      update guest
             set writer=#writer#,email=#email#,tel=#tel#,pass=#pass#,
                 contents=#contents#
             where no=#no#                 
   </update>
   
   <delete id="delete" parameterClass="int">
      delete from guest
      where no=#no#
   </delete>
</sqlMap>









